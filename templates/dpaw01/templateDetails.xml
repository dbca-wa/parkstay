	<config>
		<fields name="params">
			<fieldset name="advanced">
			
				<field name="logoFile" class="" type="media" default=""
					label="TPL_DPAW_LOGO_LABEL"
					description="TPL_DPAW_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_DPAW_FONT_LABEL"
					description="TPL_DPAW_FONT_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_DPAW_FONT_NAME_LABEL"
					description="TPL_DPAW_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group"
					default="0"
					label="TPL_DPAW_FLUID_LABEL"
					description="TPL_DPAW_FLUID_DESC"
				>
					<option value="0">TPL_DPAW_STATIC</option>
					<option value="1">TPL_DPAW_FLUID</option>
				</field>
			</fieldset>
		</fields>
